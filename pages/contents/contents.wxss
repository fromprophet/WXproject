view.larrow {
  left: 10rpx;
}
view.rarrow {
  right: 10rpx;
}
view.image {
  width: 80%;
  height: 70%;
  margin: auto;
  padding-top: 100rpx;
}
image.image_item {
  width: 100%;
  height: 100%;
}