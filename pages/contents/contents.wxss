.body {
  width: 100%;
  height: 100%;
  background-color: black;
}
view.arrow_control {
  position: absolute;
  top: 50%;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color:black;
  opacity: .5;
  text-align: center;
  line-height: 100rpx;
  color: #FFFFFF;
  font-weight: bold;
}
